<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="EidoCapture.Presentation.App"
			 xmlns:base="using:EidoCapture.Presentation.Base"
			 xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             RequestedThemeVariant="Dark">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

	<Application.DataTemplates>
		<base:ViewLocator />
	</Application.DataTemplates>

	<Application.Styles>
		<!-- Can export custom FluentTheme.Palettes at: https://theme.xaml.live/ -->
		<FluentTheme />
		<!-- Specific Controls: https://github.com/AvaloniaUI/Avalonia/tree/master/src/Avalonia.Themes.Fluent/Controls -->
		<!-- ColorPalette Properties: https://github.com/AvaloniaUI/Avalonia/blob/master/src/Avalonia.Themes.Fluent/ColorPaletteResources.Properties.cs -->
		<materialIcons:MaterialIconStyles />
		<StyleInclude Source="/Base/Styles/Colors.axaml" />
	</Application.Styles>

	<Application.Resources>
		<FontFamily x:Key="ViewHeadingFont">avares://EidoCapture/Base/Assets/Fonts/akashi-font#Akashi</FontFamily>
	</Application.Resources>
	
</Application>
